<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/changepw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list">
    <View
        android:id="@+id/centerGuide2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/skyPink"
        android:layout_marginTop="70dp"/>
    <View
        android:id="@+id/horizontal_line2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/skyPink"
        android:layout_below="@id/authenticate"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/goBack_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_button"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/appName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-9dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="iWrapper"
        android:textAlignment="center"
        android:textColor="@color/orangeRed"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView"
        android:layout_marginTop="20dp"
        android:text="Write Current Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pwText"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint=" 6 letter minimum"
        />
    <TextView
        android:id="@+id/new_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginText"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/new_pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_pw_text"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint=" Write New Password"
        />
    <TextView
        android:id="@+id/confirm_pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_pw"
        android:layout_marginTop="20dp"
        android:text="Confirm New Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_pwText"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint=" Confirm New Password"
        />

    <Button
        android:id="@+id/authenticate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pw"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orangeRed"
        android:fontFamily="@font/montserrat_medium"
        android:text="Authenticate"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_line2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:text="Please Enter Your Password to be able to Update it."
        android:textColor="@color/yellowGreen"
        android:textSize="18dp" />


    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_above="@id/confirm_pw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-129dp"
        android:backgroundTint="@color/gray"
        android:fontFamily="@font/montserrat_medium"
        android:text="update"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:textColor="@color/orangeRed"
        android:fontFamily="@font/montserrat_medium"
        android:layout_below="@id/horizontal_line"
        android:gravity="center"
        android:textSize="22dp"
        android:text="Change Password" />





</RelativeLayout>