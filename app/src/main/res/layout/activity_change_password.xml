<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/changepw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list">
    <View
        android:id="@+id/centerGuide2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/skyPink"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/goBack_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/horizontal_line"
        android:layout_marginTop="20dp"
        android:text="Write Current Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pwText"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint=" 6 letter minimum"
        />
    <TextView
        android:id="@+id/new_pw_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pw"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/new_pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_pw_text"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint=" Write New Email"
        />
    <TextView
        android:id="@+id/confirm_pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_pw"
        android:layout_marginTop="20dp"
        android:text="Confirm New Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/white"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_pwText"
        android:background="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:hint=" Write New Email"
        />

    <Button
        android:id="@+id/authenticate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirm_pw"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orangeRed"
        android:fontFamily="@font/montserrat_medium"
        android:text="Authenticate"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <Button
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/authenticate"
        android:text="update"
        android:backgroundTint="@color/orangeRed"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        />


</RelativeLayout>