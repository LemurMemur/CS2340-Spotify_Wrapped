<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/violetBlue">
    <View
        android:id="@+id/centerGuide2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>
    <View
        android:id="@+id/horizontal_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/skyPink"
        android:layout_marginTop="70dp"/>
    <ImageButton
        android:id="@+id/goBack_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/userText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/horizontal_line"
        android:layout_marginTop="80dp"
        android:text="User ID"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/yellowGreen"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/userID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userText"
        android:background="@color/white"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/userID"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/yellowGreen"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_pwText"
        android:background="@color/white"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/confirm_pwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirm_pw"
        android:layout_marginTop="20dp"
        android:text="Confirm Password"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/yellowGreen"
        android:textSize="18dp"
        />
    <EditText
        android:id="@+id/confirm_pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pwText"
        android:background="@color/white"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/regbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/pw"
        android:text="Login"
        android:backgroundTint="@color/yellowGreen"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/regbtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="142dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-115dp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Click to Login"
        android:textColor="@color/yellowGreen"
        android:textSize="18dp" />


</RelativeLayout>